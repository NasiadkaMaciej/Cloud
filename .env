# Frontend configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_KEYCLOAK_URL=http://localhost:8080
REACT_APP_KEYCLOAK_REALM=personal-cloud
REACT_APP_KEYCLOAK_CLIENT_ID=frontend-client

# API configuration
MONGO_URI=mongodb://mongo:27017/personal_cloud
JWT_SECRET=jwt_secret
QUOTA_LIMIT=5GB

# Keycloak API configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=personal-cloud
KEYCLOAK_CLIENT_ID=api-service
KEYCLOAK_CLIENT_SECRET=keycloak_secret

# Content Security Policy
KC_SPI_CONTENT_SECURITY_POLICY_FRAME_SRC=frame-src 'self' http://localhost:3000
KC_SPI_CONTENT_SECURITY_POLICY_FRAME_ANCESTORS=frame-ancestors 'self' http://localhost:3000

# Keycloak admin credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# PostgreSQL configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=strong_postgres_password_replace_this

# Docker ports
FRONTEND_PORT=3000
API_PORT=5000
KEYCLOAK_PORT=8080
MONGO_PORT=27017
